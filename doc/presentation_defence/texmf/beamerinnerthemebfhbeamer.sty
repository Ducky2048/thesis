% Daten f√ºr die Titelseite setzen
\if@dofrontgraphic
\defbeamertemplate*{title page}{bfhbeamer}[1][]
{
    \vskip6cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=1mm]{bfhTitleGraphic}%
       \usebeamerfont{title}\color{bfhgrau}\inserttitle\par%
    \end{beamercolorbox}%
    \vskip0.2cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=1mm,#1]{bfhSubtitleGraphic}%
       \usebeamerfont{subtitle}\insertsubtitle\par%
    \end{beamercolorbox}%
}
\else
\defbeamertemplate*{title page}{bfhbeamer}[1][]
{
  \vskip1.8cm%
    \begin{beamercolorbox}[wd=9.2cm,leftskip=1mm]{bfhTitle}%
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
  \vskip0.2cm%
    \begin{beamercolorbox}[wd=9.2cm,leftskip=1mm,#1]{bfhSubtitle}%
      \usebeamerfont{subtitle}\insertsubtitle\par%
    \end{beamercolorbox}%
  \vskip0.7cm%
    \begin{beamercolorbox}[wd=9.2cm,leftskip=1mm,#1]{bfhDate}
      \insertdate%
    \end{beamercolorbox}%
  \vskip1.4cm%
    \begin{beamercolorbox}[wd=9.2cm,sep=3pt,#1]{bfhAuthor}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}%
}
\fi

\defbeamertemplate*{part page}{bfhbeamer}
{
  \begin{tikzpicture}
    \useasboundingbox (0, 0) rectangle (\the\paperwidth,.9\paperheight);
    \fill[color=bfhgrau] (-\beamer@partpageBoxShift, 3.2) 
      rectangle (9.7-\beamer@partpageBoxShift, 7.3);
    \draw[rounded corners=0.2mm, color=bfhorange,fill] (-\beamer@partpageBoxShift, 3.15) 
      rectangle (9.7-\beamer@partpageBoxShift, 3.25); 
    \draw[rounded corners=0.2mm, color=bfhorange,fill] (-\beamer@partpageBoxShift, 7.25) 
      rectangle (9.7-\beamer@partpageBoxShift, 7.35); 
    \node[anchor=north west] at (0, 6.8) {%
      \begin{minipage}{95mm}
        \begin{beamercolorbox}[wd=9.5cm,leftskip=1mm]{bfhTitle}
          \usebeamerfont{part name}\partname~\insertromanpartnumber
        \end{beamercolorbox}%
        \vspace{1em}\par%
        \begin{beamercolorbox}[wd=9.5cm,leftskip=1mm]{bfhTitle}
          \usebeamerfont{part title}\insertpart\par%
        \end{beamercolorbox}%
      \end{minipage}
    };
  \end{tikzpicture}    
}

